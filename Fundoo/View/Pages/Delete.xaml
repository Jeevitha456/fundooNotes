<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fundoo.View.Pages.Delete">
  
        <ContentPage.ToolbarItems>
            <ToolbarItem x:Name="Delete" Text="Delete" Order="Secondary" Clicked="Delete_Clicked" />
        </ContentPage.ToolbarItems>
    <StackLayout>
        <StackLayout>
            <Entry x:Name="txtTitle"  Placeholder="Title" WidthRequest="300"/>
            <Entry x:Name="txtNotes" Placeholder="Notes" WidthRequest="300"/>
        </StackLayout>
    </StackLayout>
</ContentPage>