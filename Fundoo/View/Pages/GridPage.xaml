<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fundoo.View.Pages.GridPage"
             Title="DashBoard">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="gridv" Icon="grid2.png" Order="Primary" Clicked="Gridvertical_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <ScrollView Orientation="Vertical" VerticalOptions="StartAndExpand" HeightRequest="520">
                <Grid x:Name="GridLayout"></Grid>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>